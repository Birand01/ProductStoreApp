  @model IEnumerable<Product>
 <div class="text-center">
    <div class="display-6">
        PRODUCTS
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <th>ID</th>
            <th>PRODUCT NAME</th>
            <th>PRICE </th>
            <th>OPERATIONS</th>
        </thead>
        <tbody>
            @foreach(Product product in Model)
            {
                <tr>
                    <th>@product.ProductId</th>
                    <th>@product.ProductName</th>
                    <th>@product.Price</th>
                    <th>...</th>
                </tr>
            }
        </tbody>
    </table>
 </div>
