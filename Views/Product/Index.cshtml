@model IQueryable<Product>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
    </div>
    <div class="col-md-9">

        <div class="row my-3">
            @foreach (Product prod in Model)
            {
                <partial name="_ProductCard" model="@prod" />
            }
        </div>
    </div>
</div>
@section Footer {
    <div>
        Only for Index footer
    </div>
}
 @section Header {
    <div>
        Only for Index Header
    </div>
}
